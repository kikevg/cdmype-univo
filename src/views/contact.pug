extends layout.pug

block links

block content
    //- section 1 - quienes somos
    section
        img(src="/public/img/bannerContactenos.jpg", alt="" class="img-fluid")
    //- section 2 - formulario de contacto
    section.bg-white.custom-padding-1
        .container
            h4.text-secondary Para solventar tus dudas
            h2.text-primary.font-weight-bold.display-3 Escribenos
            span(class="d-block bg-secondary my-5" style="height: 6px; width: 80px")
            .row
                .col-sm-12.col-md-12.col-lg-6
                    form(action="/contact", method="post")
                        .form-group
                            .row
                                .col-sm-12.col-md-6.col-lg-6
                                    label(for="") Nombre
                                    input(type="text" name="name" class="form-control bg-light border-0 py-4")
                                .col-sm-12.col-md-6.col-lg-6
                                    label(for="") Email
                                    input(type="email" name="email-from" class="form-control bg-light border-0 py-4")
                        .form-group
                            label(for="") Asunto
                            input(type="text" name="subject" class="form-control bg-light border-0 py-4")
                        .form-group
                            label(for="") Mensaje
                            textarea(name="message", cols="30", rows="5" class="form-control bg-light border-0")
                        .form-group
                            a(href="/contact" class="btn btn-block btn-primary py-3 px-5 mr-3") Enviar
                .col-sm-12.col-md-12.col-lg-6
                    iframe(src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d3879.8555328408197!2d-88.1813477852388!3d13.482998290521817!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x8f7b2a65d2291a9f%3A0x9850fb64dc946657!2sCDMYPE%20UNIVO!5e0!3m2!1sen!2ssv!4v1596056469778!5m2!1sen!2ssv", frameborder="0" width="100%" height="400")
block scripts