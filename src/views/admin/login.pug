<!DOCTYPE html>
html(lang="es")
    head
        meta(charset="UTF-8")
        meta(name="viewport", content="width=device-width, initial-scale=1.0")
        title Login
        //- bootstrap
        link(rel="stylesheet", href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css")
        //- google fonts
        link(rel="stylesheet", href="https://fonts.googleapis.com/css2?family=Roboto:wght@400;500;900&display=swap")
        //- font awesome
        script(src="https://kit.fontawesome.com/2b5123bf0f.js")
        block links
        //- custom css
        link(rel="stylesheet", href="/public/css/style.css")
    body.bg-light
        //- login
        div(style="width: 400px" class="mx-auto mt-1")

            if error_message != null
                .alert.alert-danger.alert-dismissible.fade.show= error_message
                    button(type="button" class="close" data-dismiss="alert" aria-label="Close")
                        span(aria-hidden="true") &times;

            .card
                .card-body
                    img(src="/public/img/cdmype.jpg", alt="" width="200" class="d-block mx-auto my-4 img-fluid")
                    h4.text-center.text-primary.font-weight-bold Login
                    br
                    form(action="/admin", method="post")
                        .form-group
                            input(type="text", name="username" class="form-control" placeholder="Nombre de usuario")
                        .form-group
                            input(type="password", name="password" class="form-control" placeholder="Contrase√±a")
                        .form-group
                            button(type="submit" class="btn btn-block btn-primary py-3") Iniciar sesion
    //- jquery
    script(src="https://code.jquery.com/jquery-3.5.1.min.js")
    //- bootstrap
    script(src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js")