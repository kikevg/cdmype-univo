extends ../shared.pug

block breadcrumbItem
    li.breadcrumb-item
        a(href="/admin/home") Inicio
    li.breadcrumb-item
        a(href="/admin/business") Empresas
    li.breadcrumb-item.active
        span Detalles de empresa
block content
    section
        
        if data
            .row
                .col-sm-12.col-lg-5
                    .card
                        img(src=""+ data.imgPath +"", alt="" class="card-img-top")
                        .card-body
                            span.d-block.text-muted Nombre
                            h2.display-4= data.name
                            span.d-block.text-muted Propietario
                            h4= data.own
                            span.d-block.text-muted Fecha de fundaci√≥n
                            h4= data.fundation
                            span.d-block.text-muted Descripcion
                            div !{data.description}
                .col-sm-12.col-lg-7
                    h2.text-danger.font-weight-bold.display-4 Deseas eliminar este registro?
                    .py-4
                    a(href="/admin/business/delete/confirm/" + data.id class="btn btn-outline-danger mr-3")
                        i.fa.fa-trash
                        | &nbsp;
                        span Confirmar
                    a(href="/admin/business" class="btn bg-white")
                        i.fa.fa-arrow-left.text-primary
                        | &nbsp;
                        span.text-primary Cancelar
block scripts