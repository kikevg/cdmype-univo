extends ../shared.pug

block breadcrumbItem
    li.breadcrumb-item
        a(href="/admin/home") Home
    li.breadcrumb-item
        a(href="/admin/business") Empresas
    li.breadcrumb-item.active
        span Detalles de empresa
block content
    section
        .container
            if data
                .card
                    .card-header.bg-white.d-flex.justify-content-between
                        h4.text-primary.font-weight-bold Detalles de empresa
                        .text-right
                            a(href="/admin/business/update/" + data.id class="btn bg-blue py-3 px-5 mr-3")
                                i.fa.fa-pencil.text-primary
                                | &nbsp;
                                span.text-primary Editar
                            a(href="/admin/business/delete/" + data.id class="btn bg-red py-3 px-5")
                                i.fa.fa-trash.text-danger
                                | &nbsp;
                                span.text-danger Eliminar
                    .card-body
                        table.table.table-bordered
                            tr
                                td(colspan="2" class="text-center font-weight-bold") Imagen
                            tr
                                td(colspan="2")
                                    img(src= data.imgPath  alt="" class="img-fluid") 
                            tr
                                td.font-weight-bold Nombre
                                td= data.name
                            tr
                                td.font-weight-bold Propietario
                                td= data.own
                            tr
                                td.font-weight-bold AÃ±o de fundacion
                                td= data.yearFundation
                            tr
                                td(colspan="2" class="text-center font-weight-bold") Descripcion
                            tr
                                td(colspan="2")= data.description    
            else
                .text-center
                    h2.text-primary.display-3.font-weight-bold No data available
                    br
                    a(href="/business" class="btn btn-secondary py-4 px-5") Regresar
block scripts