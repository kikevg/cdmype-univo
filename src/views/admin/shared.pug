<!DOCTYPE html>
html(lang="es")
    head
        meta(charset="UTF-8")
        meta(name="viewport", content="width=device-width, initial-scale=1.0")
        title #{title} - CDMYPE UNIVO
        //- bootstrap
        link(rel="stylesheet", href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css")
        //- google fonts
        link(rel="stylesheet", href="https://fonts.googleapis.com/css2?family=Roboto:wght@400;500;900&display=swap")
        //- font awesome
        script(src="https://kit.fontawesome.com/2b5123bf0f.js")

        link(rel="stylesheet", href="https://cdn.datatables.net/1.10.21/css/dataTables.bootstrap4.min.css")

        block links
        //- custom css
        link(rel="stylesheet", href="/public/css/style.css")
    body.bg-light

        //- navigation
        header
            nav.navbar.navbar-expand-lg.navbar-light.bg-white.py-4
                .container
                    a(href="/admin/home" class="navbar-brand")
                        img(src="/public/img/logo.png", alt="" width="100")
                    button(type="button" class="navbar-toggler" data-toggle="collapse" data-target="#nav-menu")
                        i.fas.fa-bars
                    #nav-menu.collapse.navbar-collapse
                        ul.navbar-nav.ml-auto
                            li.nav-item
                                a(href="/admin/business" class="nav-link") Empresas
                            li.nav-item
                                a(href="/admin/services" class="nav-link") Servicios
                            li.nav-item
                                a(href="/admin/employees" class="nav-link") Empleados
                            li.nav-item
                                a(href="/admin/alliances" class="nav-link") Alianzas
                            li.nav-item
                                a(href="/admin/news" class="nav-link") Noticias
                            li.nav-item
                                a(href="/admin/logout" class="btn border") Logout
            main.py-5
                nav.pb-5.container
                    ol.breadcrumb
                        block breadcrumbItem
                block content    
        //- jquery
        script(src="https://code.jquery.com/jquery-3.5.1.min.js")
        //- bootstrap
        script(src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js")

        script(src="https://cdn.datatables.net/1.10.21/js/jquery.dataTables.min.js")
        script(src="https://cdn.datatables.net/1.10.21/js/dataTables.bootstrap4.min.js")

        script(src="/public/js/datatable.js")

        block scripts