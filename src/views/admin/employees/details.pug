extends ../shared.pug

block breadcrumbItem
    li.breadcrumb-item
        a(href="/admin/home") Inicio
    li.breadcrumb-item
        a(href="/admin/employees") Empleados
    li.breadcrumb-item.active
        span Detalles de empleado
block content
    section

        if data

            .card
                .card-header.d-flex.justify-content-between
                    h4.card-title Detalles del empleado
                    .ml-auto
                        a(href="/admin/employees/update/" + data.id class="text-decoration-none mr-3") Editar
                        a(href="/admin/employees/delete/" + data.id class="text-decoration-none") Borrar
                .card-body
                    table.table.table-bordered
                        tr
                            td(class="font-weight-bold") Imagen
                            td
                                img(src= data.imgPath class="img-fluid")
                        tr
                            td.font-weight-bold Nombre
                            td= data.name
                        tr
                            td.font-weight-bold Cargo
                            td= data.position
                        tr
                            td.font-weight-bold Emial
                            td= data.email
                        tr
                            td.font-weight-bold Telefono
                            td= data.phone
                        tr
                            td(class="font-weight-bold") Descripcion
                            td !{data.description}
        else
            .text-center
                h2.text-primary.display-3.font-weight-bold No data available
                br
                a(href="/employees" class="btn btn-secondary py-4 px-5") Regresar
block scripts