extends ../shared.pug

block breadcrumbItem
    li.breadcrumb-item
        a(href="/admin/home") Home
    li.breadcrumb-item
        a(href="/admin/employees") Empleados
    li.breadcrumb-item.active
        span Borrar empleado
block content
    section.custom-padding-1.bg-white
        .container
            if data
                .row
                    .col-sm-12.col-lg-8
                        img(src=""+ data.imgPath +"", alt="" class="img-fluid")
                        .py-5
                            span.d-block.text-muted Nombre
                            h2.text-primary.display-4.font-weight-bold= data.name
                            span.d-block.text-muted Cargo
                            h4.text-primary= data.position
                            span.d-block.text-muted Email
                            h4.text-primary= data.email
                            span.d-block.text-muted Telefono
                            h4.text-primary= data.phone
                            span.d-block.text-muted Descripcion
                            p.text-primary= data.description
                    .col-sm-12.col-lg-4
                        h2.text-danger.font-weight-bold.display-4 Deseas eliminar este registro?
                        .py-4
                        a(href="/admin/employees/delete/confirm/" + data.id class="btn btn-light py-3 px-4 mr-3")
                            i.fa.fa-trash.text-danger
                            | &nbsp;
                            span.text-danger Confirmar
                        a(href="/admin/employees" class="btn btn-light py-3 px-4")
                            i.fa.fa-arrow-left.text-primary
                            | &nbsp;
                            span.text-primary Cancelar
            else
                .text-center
                    h2.text-primary.display-3.font-weight-bold No data available
                    br
                    a(href="/admin/employees" class="btn btn-secondary py-4 px-5") Regresar
block scripts